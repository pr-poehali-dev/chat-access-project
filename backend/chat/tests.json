{
  "tests": [
    {
      "name": "Get messages without token",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401
    },
    {
      "name": "Post message without token",
      "method": "POST",
      "path": "/",
      "body": {
        "content": "Test message"
      },
      "expectedStatus": 401
    },
    {
      "name": "Delete message without token",
      "method": "DELETE",
      "path": "/?id=1",
      "expectedStatus": 401
    },
    {
      "name": "Delete message without admin rights",
      "method": "DELETE",
      "path": "/?id=1",
      "headers": {
        "X-User-Token": "regular_user_token"
      },
      "expectedStatus": 403
    },
    {
      "name": "Pin message without admin rights",
      "method": "PATCH",
      "path": "/?id=1&action=pin",
      "headers": {
        "X-User-Token": "regular_user_token"
      },
      "body": {
        "is_pinned": true
      },
      "expectedStatus": 403
    },
    {
      "name": "Edit message without ID",
      "method": "PATCH",
      "path": "/?action=edit",
      "headers": {
        "X-User-Token": "some_token"
      },
      "body": {
        "content": "Updated content"
      },
      "expectedStatus": 400
    }
  ]
}